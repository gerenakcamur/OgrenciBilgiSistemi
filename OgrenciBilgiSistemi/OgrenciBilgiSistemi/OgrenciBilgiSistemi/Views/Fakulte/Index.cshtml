@model IEnumerable<OgrenciBilgiSistemi.Models.Fakulte>

@{
    ViewData["Title"] = "Fakülteler";
}

<h1>Fakülteler</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Yeni Fakülte Ekle</a>
</p>
<table class="table table-striped table-hover">
    <thead class="table-dark">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.fakulteAd)
            </th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.fakulteAd)
            </td>
            <td>
                <div class="btn-group" role="group">
                    <a asp-action="Edit" asp-route-id="@item.fakulteID" class="btn btn-sm btn-warning">Düzenle</a>
                    <a asp-action="Details" asp-route-id="@item.fakulteID" class="btn btn-sm btn-info">Detaylar</a>
                    <a asp-action="Delete" asp  class="btn btn-sm btn-info">Detaylar</a>
                    <a asp-action="Delete" asp-route-id="@item.fakulteID" class="btn btn-sm btn-danger">Sil</a>
                </div>
            </td>
        </tr>
}
    </tbody>
</table>
