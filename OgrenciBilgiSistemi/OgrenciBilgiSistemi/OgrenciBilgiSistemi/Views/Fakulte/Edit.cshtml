@model OgrenciBilgiSistemi.Models.Fakulte

@{
    ViewData["Title"] = "Fakülte Düzenle";
}

<h1>Fakülte Düzenle</h1>

<hr />
<div class="row">
    <div class="col-md-6">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="fakulteID" />
            <div class="form-group mb-3">
                <label asp-for="fakulteAd" class="control-label"></label>
                <input asp-for="fakulteAd" class="form-control" />
                <span asp-validation-for="fakulteAd" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Kaydet" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary">Listeye Dön</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
