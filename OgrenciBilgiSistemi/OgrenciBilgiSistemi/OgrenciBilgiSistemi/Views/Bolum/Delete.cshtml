@model OgrenciBilgiSistemi.Models.Bolum

@{
    ViewData["Title"] = "Bölüm Sil";
}

<h1>Bölüm Sil</h1>

<h3 class="text-danger">Bu bölümü silmek istediğinizden emin misiniz?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.bolumAd)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.bolumAd)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Fakulte)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Fakulte.fakulteAd)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="bolumID" />
        <input type="submit" value="Sil" class="btn btn-danger" />
        <a asp-action="Index" class="btn btn-secondary">Listeye Dön</a>
    </form>
</div>