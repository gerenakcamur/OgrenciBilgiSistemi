@model OgrenciBilgiSistemi.Models.Bolum

@{
    ViewData["Title"] = "Bölüm Düzenle";
}

<h1>Bölüm Düzenle</h1>

<hr />
<div class="row">
    <div class="col-md-6">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="bolumID" />
            <div class="form-group mb-3">
                <label asp-for="bolumAd" class="control-label"></label>
                <input asp-for="bolumAd" class="form-control" />
                <span asp-validation-for="bolumAd" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="fakulteID" class="control-label"></label>
                <select asp-for="fakulteID" class="form-control" asp-items="ViewBag.fakulteID"></select>
                <span asp-validation-for="fakulteID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Kaydet" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary">Listeye Dön</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}