<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Öğrenci Bilgi Sistemi</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/OgrenciBilgiSistemi.styles.css" asp-append-version="true" />

    <style>
        .navbar-gradient {
            background: linear-gradient(135deg, #4e54c8, #8f94fb);
        }

        .navbar-gradient .nav-link,
        .navbar-gradient .navbar-brand,
        .navbar-gradient .dropdown-toggle {
            color: white !important;
        }

        .navbar-gradient .nav-link:hover,
        .navbar-gradient .dropdown-item:hover {
            color: #ffe082 !important;
        }

        .dropdown-menu {
            background-color: #4e54c8;
            border: none;
        }

        .dropdown-menu .dropdown-item {
            color: white;
        }

        .dropdown-menu .dropdown-item:hover {
            background-color: rgba(255, 255, 255, 0.1);
        }
    </style>
</head>

<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-gradient shadow-sm sticky-top">
            <div class="container-fluid">
                <a class="navbar-brand fw-bold" asp-controller="Home" asp-action="Index">
                    <i class="fas fa-user-graduate me-1"></i> OBS Sistemi
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavDropdown"
                        aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon text-white"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNavDropdown">
                    <ul class="navbar-nav ms-auto mb-2 mb-lg-0">
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Home" asp-action="Index">Ana Sayfa</a>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="yonetimDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                Yönetim
                            </a>
                            <ul class="dropdown-menu" aria-labelledby="yonetimDropdown">
                                <li><a class="dropdown-item" asp-controller="Fakulte" asp-action="Index">Fakülteler</a></li>
                                <li><a class="dropdown-item" asp-controller="Bolum" asp-action="Index">Bölümler</a></li>
                                <li><a class="dropdown-item" asp-controller="Ogrenci" asp-action="Index">Öğrenciler</a></li>
                                <li><a class="dropdown-item" asp-controller="Ders" asp-action="Index">Dersler</a></li>
                                <li><hr class="dropdown-divider" /></li>
                                <li><a class="dropdown-item" asp-controller="OgrenciDers" asp-action="Index">Öğrenci-Ders İşlemleri</a></li>
                            </ul>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="raporlarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                Raporlar
                            </a>
                            <ul class="dropdown-menu" aria-labelledby="raporlarDropdown">
                                <li><a class="dropdown-item" asp-controller="OgrenciDers" asp-action="OgrenciDersler">Öğrenci Dersleri Sorgulama</a></li>
                                <li><a class="dropdown-item" asp-controller="OgrenciDers" asp-action="DersSayilari">Ders Sayıları</a></li>
                                <li><a class="dropdown-item" asp-controller="OgrenciDers" asp-action="DersOgrencileri">Ders Öğrencileri ve Not Girişi</a></li>
                            </ul>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="container mt-4">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted mt-5">
        <div class="container text-center">
            © 2025 - Geliştirme ve Tasarım: Görkem Eren AKÇAMUR
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
