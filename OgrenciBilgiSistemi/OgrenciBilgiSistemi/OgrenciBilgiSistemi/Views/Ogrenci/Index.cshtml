@model IEnumerable<OgrenciBilgiSistemi.Models.Ogrenci>

@{
    ViewData["Title"] = "Öğrenciler";
}

<h1>Öğrenciler</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Yeni Öğrenci Ekle</a>
</p>
<table class="table table-striped table-hover">
    <thead class="table-dark">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ogrenciID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ad)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.soyad)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Bolum)
            </th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ogrenciID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ad)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.soyad)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Bolum.bolumAd)
            </td>
            <td>
                <div class="btn-group" role="group">
                    <a asp-action="Edit" asp-route-id="@item.ogrenciID" class="btn btn-sm btn-warning">Düzenle</a>
                    <a asp-action="Details" asp-route-id="@item.ogrenciID" class="btn btn-sm btn-info">Detaylar</a>
                    <a asp-action="Delete" asp-route-id="@item.ogrenciID" class="btn btn-sm btn-danger">Sil</a>
                    <a asp-controller="OgrenciDers" asp-action="OgrenciDersler" asp-route-id="@item.ogrenciID" class="btn btn-sm btn-success">Dersler</a>
                </div>
            </td>
        </tr>
}
    </tbody>
</table>
