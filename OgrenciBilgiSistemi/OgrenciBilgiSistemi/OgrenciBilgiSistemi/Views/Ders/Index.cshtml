@model IEnumerable<OgrenciBilgiSistemi.Models.Ders>

@{
    ViewData["Title"] = "Dersler";
}

<h1>Dersler</h1>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">
        @TempData["SuccessMessage"]
    </div>
}

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">
        @TempData["ErrorMessage"]
    </div>
}

<p>
    <a asp-action="Create" class="btn btn-primary">Yeni Ders Ekle</a>
</p>
<table class="table table-striped table-hover">
    <thead class="table-dark">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.dersKodu)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.dersAd)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.kredi)
            </th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.dersKodu)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.dersAd)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.kredi)
                </td>
                <td>
                    <div class="btn-group" role="group">
                        <a asp-action="Edit" asp-route-id="@item.dersID" class="btn btn-sm btn-warning">Düzenle</a>
                        <a asp-action="Details" asp-route-id="@item.dersID" class="btn btn-sm btn-info">Detaylar</a>
                        <a asp-action="Delete" asp-route-id="@item.dersID" class="btn btn-sm btn-danger">Sil</a>
                        <a asp-controller="OgrenciDers" asp-action="DersOgrencileri" asp-route-id="@item.dersID" class="btn btn-sm btn-success">Öğrenciler</a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>
