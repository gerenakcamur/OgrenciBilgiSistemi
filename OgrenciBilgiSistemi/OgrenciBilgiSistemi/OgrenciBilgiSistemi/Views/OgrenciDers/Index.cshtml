@model IEnumerable<OgrenciBilgiSistemi.Models.OgrenciDers>

@{
    ViewData["Title"] = "Öğrenci-Ders İlişkileri";
}

<h1>Öğrenci-Ders İlişkileri</h1>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">
        @TempData["SuccessMessage"]
    </div>
}

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">
        @TempData["ErrorMessage"]
    </div>
}

<p>
    <a asp-action="Create" class="btn btn-primary">Yeni Öğrenci-Ders İlişkisi Ekle</a>
</p>
<table class="table table-striped table-hover">
    <thead class="table-dark">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Ogrenci.TamAd)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Ders.dersKodu)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Ders.dersAd)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.yil)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.yariyil)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.vize)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.final)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Ortalama)
            </th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Ogrenci.TamAd)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Ders.dersKodu)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Ders.dersAd)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.yil)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.yariyil)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.vize)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.final)
                </td>       
                <td>
                    @Html.DisplayFor(modelItem => item.Ortalama)
                </td>
                <td>
                    <div class="btn-group" role="group">
                        <a asp-action="Edit" asp-route-ogrenciId="@item.ogrenciID" asp-route-dersId="@item.dersID" class="btn btn-sm btn-warning">Düzenle</a>
                        <a asp-action="Delete" asp-route-ogrenciId="@item.ogrenciID" asp-route-dersId="@item.dersID" class="btn btn-sm btn-danger">Sil</a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>
